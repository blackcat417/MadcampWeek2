<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCocktail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/cocktail1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 칵테일 이름, 주재료, 레시피, 별점 입력 필드 (RatingBar) -->
            <!-- 이 부분은 제공하신 코드를 그대로 사용하시면 됩니다. -->
            <!-- 칵테일 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CocktailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="칵테일 이름 : "
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textViewCocktailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천 칵테일 정보가 여기에 표시됩니다."
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 주재료 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CocktailIngredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주재료 : "
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textViewCocktailIngredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천 칵테일 정보가 여기에 표시됩니다."
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- 레시피 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CocktailInstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피 : "
                    android:textSize="18sp"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewCocktailInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천 칵테일 정보가 여기에 표시됩니다."
                        android:textSize="18sp"/>
                </ScrollView>
            </LinearLayout>
            <!-- 별점 입력 필드 (RatingBar) -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1.0"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

